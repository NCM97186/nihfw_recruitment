<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
<IfModule mod_headers.c>
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    </IfModule>



# Block suspicious request methods
RewriteCond %{REQUEST_METHOD} ^(HEAD|TRACE|DELETE|TRACK|DEBUG|OPTIONS|PUT|UPDATE) [NC]
RewriteRule ^(.*)$ - [F,L]

php_value session.cookie_httponly 1
php_value session.cookie_secure 1

ErrorDocument 403 /Home/customerror
ErrorDocument 500 /Home/customerror
ErrorDocument 404 /Home/customerror
ErrorDocument 403 /Home/error404
ErrorDocument 500 /Home/error404
ErrorDocument 404 /Home/error404



RewriteEngine On
#RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule (.*) index.php/$1

<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains"
    Header set Referrer-Policy "strict-origin"
</IfModule>
<IfModule mod_headers.c>
# START - Disable server signature #
ServerSignature Off
# END - Disable server signature #

# set CSP header
Header add X-Content-Security-Policy "default-src 'self'; script-src 'self';"

# set X-XSS-Protection header
Header set X-XSS-Protection "1; mode=block"


#samesite strict 
 Header always edit Set-Cookie (.*) "$1; SameSite=Strict"

# set Strict Transport Security
Header always set Strict-Transport-Security "max-age=31536000; includeSubdomains;"

# Header add Cache Control
Header add Cache-Control "private, no-store, no-cache, must-revalidate, post-check=0, pre-check=0, max-age=0"

#X-Frame-Options
Header always set X-Frame-Options "SAMEORIGIN

#X-Security Header to help protect against content-sniffing
Header set X-Content-Type-Options nosniff

Header always set Referrer-Policy "same-origin"

#PHP Discloser
Header unset X-Powered-By

      
#Browser cache weakness
        Header set Cache-Control no-store
        Header set Pragma no-cache 
</IfModule>
